SINTRAEMSDES=@GRUPO('14')
FREGRESO=FSALIDA+DIAAUS
FREGRESONOM=FSALIDANOM+DIAAUS
FTERMINAAUS=FREGRESO-1
DIAFINAL=@RFECHA(FTERMINAAUS,7)
VALORBASE=SUELDO
SDOLAR=@GRUPO('18')
SI SDOLAR=1
        VALORBASE=VALORBASE*TRM
        VALORBASE=@REDON(VALORBASE)
FINSI
SI TIPOPERIODO=5
     VALORBASE=VALORBASE*12/365*30
FINSI
V=VALORBASE/30*DIAAUS
SI DIAFINAL<>1 Y (SINTRAEMSDES=0 O DIAAUS>4)
    DIAAUS=DIAAUS+1
    FREGRESO=FSALIDA+DIAAUS
    FREGRESONOM=FSALIDANOM+DIAAUS
    FTERMINAAUS=FREGRESO-1
    VALORBASE=0-VALORBASE
FINSI
VALORAUS=@REDON(V)
